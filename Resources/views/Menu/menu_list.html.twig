<li {% if node.hasMenuId() %}id="menu-{{ node.getMenuId() }}" data-id="{{ node.getMenuId() }}"{% endif %}>
    <a title="{{ node.getLabel() }}" href="{% if node.hasMenuId() %}{{ path('admin_raindrop_page_menuentry_edit', { id: node.getMenuId() }) }}{% else %}javascript:;{% endif %}">{{ node.getPath() }} [{{ node.getLabel() }}]</a>

    {% if node.hasMenuId() %}
        <a title="Delete menu {{ node.getLabel() }}" class="raindrop_tips" href="{{ path('admin_raindrop_page_menuentry_delete', { id: node.getMenuId() }) }}"><i class="icon-remove"></i></a>
    {% endif %}

    {% if node.getChildren() is not empty %}
        <ul class="sortable">
            {% for child in node.getChildren() %}
                {% include 'RaindropPageBundle:Menu:menu_list.html.twig' with { 'node': child } %}
            {% endfor %}
        </ul>
    {% endif %}
</li>
