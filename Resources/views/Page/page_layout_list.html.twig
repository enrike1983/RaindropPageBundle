{% if use_liip_theme %}
    <h4>Liip theme: {% if liip_theme is empty %}{{ 'default'|upper }}{% else %}{{ liip_theme|upper }}{% endif %}</h4>
{% endif %}

<div class="row-fluid">
    <div class="span3"></div>
    {% include 'RaindropPageBundle:Page:page_block_list.html.twig' with { 'layout': 'top' ~ liip_theme_suffix, 'width': 6 } %}
</div>
<div class="row-fluid"></div>
<div class="row-fluid"></div>
<div class="row-fluid">
    {% include 'RaindropPageBundle:Page:page_block_list.html.twig' with { 'layout': 'left' ~ liip_theme_suffix, 'width': 3 } %}
    {% include 'RaindropPageBundle:Page:page_block_list.html.twig' with { 'layout': 'content' ~ liip_theme_suffix, 'width': 6 } %}
    {% include 'RaindropPageBundle:Page:page_block_list.html.twig' with { 'layout': 'right' ~ liip_theme_suffix, 'width': 3 } %}
</div>
<div class="row-fluid"></div>
<div class="row-fluid"></div>
<div class="row-fluid">
    <div class="span3"></div>
    {% include 'RaindropPageBundle:Page:page_block_list.html.twig' with { 'layout': 'bottom' ~ liip_theme_suffix, 'width': 6 } %}
</div>


{# Twitter bootstrap modal wrapper #}
{% for block in object.getChildren() %}
    <div id="editModal{{ block.getId() }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-body"></div>
    </div>

    <div id="previewModal{{ block.getId() }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-body"></div>
    </div>
{% endfor %}
